version: '3.8'

services:
  wg-ui:
    image: ngoduykhanh/wireguard-ui:latest
    container_name: wg-ui
    environment:
      - SENDGRID_API_KEY=optional
      - EMAIL_FROM=optional
      - SESSION_SECRET=secret123
      - WG_CONF_TEMPLATE=/etc/wireguard/wg0.conf.tmpl
    volumes:
      - ./wg_config:/etc/wireguard
      - ./wg-ui-db:/app/db
    ports:
      - 80:5000
    depends_on:
      - wireguard
    restart: unless-stopped
    networks:
      - wg_network

networks:
  wg_network:
    driver: bridge
