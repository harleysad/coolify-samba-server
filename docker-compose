version: '3.8'

services:
  nginx:
    image: nginx:alpine
    ports:
      - 80
    container_name: nginx
    restart: unless-stopped
    healthcheck:
      test: ["CMD-SHELL", "curl -f http://localhost:80 || exit 1"]
      interval: 10s
      timeout: 5s
      retries: 3

  debian:
    image: debian:latest
    container_name: nginx
    command: tail -f /dev/null
    restart: unless-stopped


